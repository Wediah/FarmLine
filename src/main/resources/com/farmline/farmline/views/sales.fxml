<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="10" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.farmline.farmline.controller.SalesController">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Sales Management" style="-fx-font-weight: bold;">
        <font>
            <Font size="20.0"/>
        </font>
    </Label>

    <TextField fx:id="produceIdField" promptText="Produce ID"/>
    <TextField fx:id="quantitySoldField" promptText="Quantity Sold"/>
    <TextField fx:id="totalAmountField" promptText="Total Amount"/>
    <Button text="Record Sale" onAction="#handleRecordSale" defaultButton="true"/>
    <Button text="Go to Weather" onAction="#handleNavigateToWeather"/>
</VBox>