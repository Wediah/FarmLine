<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.ListView?>
<GridPane fx:controller="com.farmline.farmline.controller.SalesController" xmlns:fx="http://javafx.com/fxml">
    <Label text="Produce ID:" GridPane.rowIndex="0" GridPane.columnIndex="0" />
    <TextField fx:id="produceIdField" GridPane.rowIndex="0" GridPane.columnIndex="1" />
    <Label text="Quantity Sold:" GridPane.rowIndex="1" GridPane.columnIndex="0" />
    <TextField fx:id="quantitySoldField" GridPane.rowIndex="1" GridPane.columnIndex="1" />
    <Label text="Total Amount:" GridPane.rowIndex="2" GridPane.columnIndex="0" />
    <TextField fx:id="totalAmountField" GridPane.rowIndex="2" GridPane.columnIndex="1" />
    <Label text="Sale Date:" GridPane.rowIndex="3" GridPane.columnIndex="0" />
    <TextField fx:id="saleDateField" GridPane.rowIndex="3" GridPane.columnIndex="1" />
    <Button text="Add Sale" onAction="#handleAddSale" GridPane.rowIndex="4" GridPane.columnIndex="1" />
    <Label fx:id="statusLabel" GridPane.rowIndex="5" GridPane.columnIndex="1" />
    <ListView fx:id="salesList" GridPane.rowIndex="6" GridPane.columnIndex="1" />
    <Button text="Go to Produce" onAction="#goToProduce" GridPane.rowIndex="7" GridPane.columnIndex="0" />
    <Button text="Go to Weather" onAction="#goToWeather" GridPane.rowIndex="7" GridPane.columnIndex="1" />
</GridPane>