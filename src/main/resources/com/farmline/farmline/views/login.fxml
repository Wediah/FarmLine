<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="10" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.farmline.farmline.controller.LoginController">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Farmers' Market Management" style="-fx-font-weight: bold;">
        <font>
            <Font size="20.0"/>
        </font>
    </Label>

    <TextField fx:id="usernameField" promptText="Username"/>
    <TextField fx:id="passwordField" promptText="Password"/>
    <Button text="Login" onAction="#handleLogin" defaultButton="true"/>
    <Button text="Register" onAction="#handleRegister"/>
    <Button text="Go to Produce Management" onAction="#handleNavigateToProduce"/>
</VBox>
